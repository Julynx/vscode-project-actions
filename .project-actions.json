{
  "actions": [
    {
      "text": "$(play) Run",
      "command": "code --extensionDevelopmentPath=${workspaceFolder}",
      "tooltip": "Launch extension in development mode",
      "color": "#00CCAA"
    },
    {
      "text": "$(gear) Install",
      "command": "npm install",
      "tooltip": "Install dependencies",
      "color": "#00AACC"
    },
    {
      "text": "$(tools) Compile",
      "command": "npm run compile",
      "tooltip": "Compile TypeScript",
      "color": "#CCAA00"
    },
    {
      "text": "$(package) Package",
      "command": "npx vsce package",
      "tooltip": "Create VSIX package",
      "color": "#CC00CC"
    },
    {
      "text": "$(arrow-up) Bump",
      "command": "npm version patch",
      "tooltip": "Bump version (patch)",
      "color": "#AACC00"
    },
    {
      "text": "$(repo-push) Push",
      "command": "git add .; git commit; git push",
      "tooltip": "Commit and push changes",
      "color": "#CCAAAA"
    },
    {
      "text": "$(cloud-upload) Publish",
      "command": "npx vsce publish",
      "tooltip": "Publish extension to Marketplace",
      "color": "#AACCAA"
    }
  ]
}