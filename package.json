{
  "name": "project-actions",
  "displayName": "Project Actions",
  "description": "Add custom action buttons to the status bar that execute shell commands",
  "version": "1.2.2",
  "publisher": "julynx",
  "author": {
    "name": "Julynx",
    "email": "juliocabria@tutanota.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/julynx/vscode-project-actions"
  },
  "bugs": {
    "url": "https://github.com/julynx/vscode-project-actions/issues"
  },
  "homepage": "https://github.com/julynx/vscode-project-actions#readme",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "project",
    "actions",
    "buttons",
    "status bar",
    "commands",
    "productivity",
    "workflow"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "json5",
        "filenames": [
          ".project-actions.json"
        ],
        "filenamePatterns": [
          "**/project-actions.json"
        ]
      }
    ],
    "commands": [
      {
        "command": "project-actions.reload",
        "title": "Project Actions: Reload Configuration"
      },
      {
        "command": "project-actions.editProjectActions",
        "title": "Project Actions: Edit Project Actions"
      },
      {
        "command": "project-actions.editGlobalActions",
        "title": "Project Actions: Edit Global Actions"
      },
      {
        "command": "project-actions.editActiveFileActions",
        "title": "Project Actions: Edit Active File Actions"
      }
    ],
    "configuration": {
      "title": "Project Actions",
      "properties": {
        "project-actions.configFileName": {
          "type": "string",
          "default": ".project-actions.json",
          "description": "Name of the configuration file to look for in the project root"
        },
        "project-actions.globalActions": {
          "type": "array",
          "default": [],
          "description": "Global actions that are displayed when glob patterns match files in the workspace, or always if no glob is specified",
          "items": {
            "type": "object",
            "required": [
              "text",
              "command"
            ],
            "properties": {
              "text": {
                "type": "string",
                "description": "Button text to display on the status bar"
              },
              "command": {
                "type": "string",
                "description": "Shell command to execute when the button is clicked"
              },
              "glob": {
                "type": "string",
                "description": "Optional glob pattern to match against workspace files (e.g., '**/.git' to match projects with a .git folder). If omitted, the action is always shown."
              },
              "tooltip": {
                "type": "string",
                "description": "Optional tooltip to display when hovering over the button"
              },
              "color": {
                "type": "string",
                "description": "Optional color for the button text (e.g., '#FF0000' for red)"
              }
            }
          }
        },
        "project-actions.activeFileActions": {
          "type": "array",
          "default": [],
          "description": "Actions that are displayed based on the currently active file matching a glob pattern",
          "items": {
            "type": "object",
            "required": [
              "text",
              "command"
            ],
            "properties": {
              "text": {
                "type": "string",
                "description": "Button text to display on the status bar"
              },
              "command": {
                "type": "string",
                "description": "Shell command to execute when the button is clicked"
              },
              "glob": {
                "type": "string",
                "description": "Glob pattern to match against the active file path (e.g., '**/*.ts'). If omitted, the action is shown for all files."
              },
              "tooltip": {
                "type": "string",
                "description": "Optional tooltip to display when hovering over the button"
              },
              "color": {
                "type": "string",
                "description": "Optional color for the button text (e.g., '#FF0000' for red)"
              }
            }
          }
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": ".project-actions.json",
        "url": "./schemas/project-actions.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "node esbuild.js --production",
    "compile-tests": "tsc -p . -outDir out",
    "watch-tests": "tsc -p . -outDir out -watch",
    "pretest": "npm run compile-tests && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "glob": "^11.0.0",
    "json5": "^2.2.3",
    "minimatch": "^10.1.1"
  }
}
